<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_login_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ui.activity.LoginCadastroActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar_login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/layout_top"
            layout="@layout/layout_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/logo_mywallet"
            app:layout_constraintBottom_toTopOf="@id/layout_bottom_login_cadastro"
            app:layout_constraintLeft_toLeftOf="@id/layout_top"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar" />

        <include
            android:id="@+id/layout_bottom_login_cadastro"
            layout="@layout/layout_bottom_login_cadastro"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
